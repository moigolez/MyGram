<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">View all images in a carousel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://redmondmag.com/blogs/the-schwartz-report/2014/07/~/media/ECG/redmondmag/Images/introimages2014/140128REDMackieOpenCloud.ashx" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="https://st.depositphotos.com/1092255/1347/i/950/depositphotos_13471314-stock-photo-travel.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="https://c8.alamy.com/comp/A38BP1/the-wiltshire-downs-in-late-summer-A38BP1.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="https://preview.redd.it/jlsev7p39y661.png?auto=webp&s=49c363be891fe9921c9ac5f594531d705b8186e4" class="d-block w-100">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



