<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
          content="My Gram">
    <meta name="author" content="Moises Golez" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyGram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/UserProfile.css" />
   
</head>
<body>
    <header id="Header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <p style="font-family:Apple Chancery">My Gram</p>
                <div class="topnav">
                    <input type="text" placeholder="Search..">
                </div>

                <a class="GramButtons" href="~/Home/Register">Log In</a>
                <a class="GramButtons" href="~/Home/UserProfileInformation">Sign Up</a>

            </div>
            <a href="~/Home/UserProfileInformation"><img style="width:25px;height:25px" src="~/Images/icon user.png" /></a>


        </nav>

    </header>
    <div class="container maincontainer">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyGram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
